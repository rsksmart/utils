  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Rsk Conversion Utils
    link(rel='icon', href='./img/favicon.ico')
    link(rel='stylesheet', href='./style/style.scss')

  body
    main
      header
        .container
          a(href='/')
            img(height='64', src='./img/rsk_logo.svg')

      section
        .container
          .cards
            .card
              h2.card-header From BTC to RSK Key
              .card-body
                .fields
                  .form-field
                    label(for='toRskInput') BTC Private Key
                    input#toRskInput(placeholder='BTC private key')
                  button#toRskBtn Transform
                #toRskResult
            .card
              h2.card-header From RSK to BTC Key
              .card-body
                .fields
                  .form-field 
                    label(for='toRskInput') RSK Private Key:
                    input#toBtcInput(placeholder='RSK private key')
                  select#btcNetwork
                    option(value='TEST_NET', selected) Test Net
                    option(value='MAIN_NET') Main Net
                  button#toBtcBtn Transform
                #toBtcResult

